<div class = "row" id="ajax-courses">
  <% if courses.present? %>
    <% courses.each do |course| %>
      <div class="col-12 col-md-6 col-lg-4">
        <div class="card course-card">
          <div class="card-body">
            <h4 class="card-title"><%= link_to course.title, course_path(course) %></h4>
            <p class="course-card__text"><%=  course.content %></p>
            <%= link_to 'View', course_path(course) , class: "btn course-card__btn btn-primary btn-md" %>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="col-10 course-card">
      <div class="card bg-light child">
        <div class="card-body">
          <p class="card-text">No courses for this category.</p>
        </div>
      </div>
    </div>
  <% end %>
</div>
<%= paginate @courses, params: { category_id: params[:category_id] }, remote: true %>
