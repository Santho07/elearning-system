<div class="">
  <%= render "shared/errors", obj: course %>
  <%= simple_form_for [current_user, course] do |f| %>
    <%= f.error_notification %>
    <%= f.input :title, required: true %>
    <%= f.input :content,
                as: :text,
                input_html: { :rows => 7, :style => 'width: 100%'},
                required: true %>
    <%= f.input :category_id,
                as: :select,
                collection: Category.all,
                prompt: 'Select Category',
                required: true %>
    <%= f.input :credit_hour, required: true %>
    <%= f.button :submit, class: 'btn-primary btn-bottom' %>
    <%= f.button :button, t('button.reset'),
                          type: 'reset', 
                          class: "btn-outline-secondary btn-bottom" %>
  <% end %>
</div>
